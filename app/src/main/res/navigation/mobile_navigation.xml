<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.erasmusapp.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_forum"
            app:destination="@id/nav_forum" />
    </fragment>

    <fragment
        android:id="@+id/nav_eventos"
        android:name="com.example.erasmusapp.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        android:background="@drawable/skylodz"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_forum"
        android:name="com.example.erasmusapp.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_forum" />

    <fragment
        android:id="@+id/nav_galeria"
        android:name="com.example.erasmusapp.ui.tools.ToolsFragment"
        android:label="@string/menu_tools"
        tools:layout="@layout/fragment_tools" />

</navigation>